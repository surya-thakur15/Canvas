<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/height_5"
    android:layout_marginBottom="@dimen/height_5"
    app:cardCornerRadius="@dimen/ten_dp"
    android:orientation="vertical"
    android:elevation="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/recycler_view_layout"
        android:background="@drawable/rounded_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:layout_margin="@dimen/ten_dp"
        >

        <RelativeLayout
            android:id="@+id/layoutOut"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content">

            <ImageView
                android:id="@+id/searchImage"
                android:layout_width = "50dp"
                android:layout_height = "50dp"
                android:src="@drawable/location_mark"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_below="@id/searchImage"
                android:text="Janta Tent House"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layoutInside"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_toRightOf="@id/layoutOut"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/tentName"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="Janta Tent House"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/location"
                android:layout_below="@id/tentName"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="Siddhrawali"
                android:textColor="#000"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/ratingText"
                android:layout_below="@id/location"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="Rating: "
                android:textColor="#000"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/rating"
                android:layout_below="@id/location"
                android:layout_toRightOf="@id/ratingText"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="4.2"
                android:textSize="12sp"


                />




        </RelativeLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView >